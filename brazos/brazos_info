DMIPATH=/sys/class/dmi/id

brazos_info()
{
	board=`cat $DMIPATH/product_name`
	case "$board" in
		Inagua)
			echo 'hal.sensors.kbd.type=2' >> default.prop
			;;
		*)
			;;
	esac

	EXTMOD="$EXTMOD ath3k uvcvideo hid-multitouch"
	return 1 # auto_detect
}

detect_hardware()
{
	case "`cat $DMIPATH/uevent`" in
		*AMDCorporation*)
			brazos_info
			;;
		*MSI*)
			brazos_info
			;;
		*)
			brazos_info
			;;
	esac
}
